<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_BDLI_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/tv_BDLI_name"
        android:layout_toRightOf="@id/iv_BDLI_image"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/tv_BDLI_address"
        android:layout_below="@id/tv_BDLI_name"
        android:layout_alignEnd="@id/tv_BDLI_name"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/tv_BDLI_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_BDLI_image"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/tv_BDLI_name"
        android:text="TextView" />


</RelativeLayout>
